prefix = @prefix@
INSTALL_BINDIR	= $(prefix)/bin
INSTALL_LIBDIR	= $(prefix)/lib
INSTALL_MANDIR 	= $(prefix)/man

CC		= @CC@
INSTALL		= @INSTALL@
INSTALL_BIN 	= @INSTALL_PROGRAM@
INSTALL_FILE 	= @INSTALL_DATA@
RANLIB		= @RANLIB@
XTRA_LIBS	= @XTRA_LIBS@
XTRA_CFLAGS     = @XTRA_CFLAGS@


DEBUG		= $(DEBUG_TOP) #-O #-g #-DDEBUG
DEBUG_LIBS	=

CFLAGS		= $(DEBUG) $(CACHE_FLAGS) -I../include $(XTRA_CFLAGS)

LIBDIR		= .
UTILOBJS	= rfc850.o \
		  rfc1738.o \
		  util.o \
		  host_cache.o \
		  getfullhostname.o \
		  debug.o \
		  log.o
REGEXOBJS	= regex.o
LIBS		= libutil.a libregex.a


all: $(LIBS)

libutil.a: $(UTILOBJS)
	ar r $@ $(UTILOBJS)
	$(RANLIB) $@

libregex.a: $(REGEXOBJS)
	ar r $@ $(REGEXOBJS)
	$(RANLIB) $@

clean:
	-rm -f $(UTILOBJS) $(LIBS) core

realclean: clean
	-rm -f libregex.a
	-rm -f Makefile

install: all
