prefix		= @prefix@
srcdir		= @srcdir@
VPATH		= @srcdir@


CC		= @CC@
INSTALL		= @INSTALL@
INSTALL_BIN 	= @INSTALL_PROGRAM@
INSTALL_FILE 	= @INSTALL_DATA@
RANLIB		= @RANLIB@
AC_CFLAGS	= @CFLAGS@
LDFLAGS		= @LDFLAGS@
XTRA_LIBS	= @XTRA_LIBS@

INCLUDE		= -I../include -I$(srcdir)/../include
UTILOBJS	= rfc850.o \
		  rfc1738.o \
		  util.o \
		  host_cache.o \
		  getfullhostname.o \
		  debug.o \
		  log.o
REGEXOBJS	= GNUregex.o
LIBS		= libmiscutil.a libregex.a

CFLAGS		= $(AC_CFLAGS) $(INCLUDE)

all: $(LIBS)

libmiscutil.a: $(UTILOBJS)
	ar r $@ $(UTILOBJS)
	$(RANLIB) $@

libregex.a: $(REGEXOBJS)
	ar r $@ $(REGEXOBJS)
	$(RANLIB) $@

clean:
	-rm -f $(UTILOBJS) $(REGEXOBJS) $(LIBS) core

realclean: clean
	-rm -f libregex.a
	-rm -f Makefile

install: all
