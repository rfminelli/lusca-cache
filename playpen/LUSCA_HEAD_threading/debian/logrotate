#
#	Logrotate fragment for squid.
#
/var/log/squid/*.log {
	daily
	compress
	delaycompress
	rotate 2
	missingok
	nocreate
	sharedscripts
	firstaction
		test ! -x /usr/sbin/sarg-maint || /usr/sbin/sarg-maint
	endscript
	lastaction
		test ! -e /var/run/squid.pid || /usr/sbin/squid -k rotate
	endscript
}
